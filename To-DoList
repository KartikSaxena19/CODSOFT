#include <iostream>
#include <vector>
#include <string>
using namespace std;

void app();  
int main() {
    app();
    return 0;
}
void app() {
    vector<string> tasks;  
    int num_tasks;
    
    cout << "Hi User, welcome! What's your task for today..." << endl;
    cout << "Enter the number of tasks you want to add: ";
    cin >> num_tasks;

    for (int i = 0; i < num_tasks; i++) {
        string task;
        cout << "Enter task " << (i + 1) << ": ";
        cin.ignore();  
        getline(cin, task);  
        tasks.push_back(task);
    }

    int choice;
    do {
        cout << "\nWhat do you want to do next?\n";
        cout << "1 -> Add a new task\n";
        cout << "2 -> Update a task\n";
        cout << "3 -> View tasks\n";
        cout << "4 -> Delete a task\n";
        cout << "5 -> Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        if (choice == 1) {
            string new_task;
            cout << "Enter new task: ";
            cin.ignore();
            getline(cin, new_task);
            tasks.push_back(new_task);
            cout << "Task added successfully.\n";
        } 
        else if (choice == 2) {
            int task_num;
            cout << "Enter the task number you want to update: ";
            cin >> task_num;
            if (task_num > 0 && task_num <= tasks.size()) {
                string updated_task;
                cout << "Enter the updated task: ";
                cin.ignore();
                getline(cin, updated_task);
                tasks[task_num - 1] = updated_task;
                cout << "Task updated successfully.\n";
            } else {
                cout << "Invalid task number.\n";
            }
        } 
        else if (choice == 3) {
            cout << "Your tasks:\n";
            for (int i = 0; i < tasks.size(); i++) {
                cout << (i + 1) << ". " << tasks[i] << endl;
            }
        } 
        else if (choice == 4) {
            int task_num;
            cout << "Enter the task number you want to delete: ";
            cin >> task_num;
            if (task_num > 0 && task_num <= tasks.size()) {
                tasks.erase(tasks.begin() + (task_num - 1));
                cout << "Task deleted successfully.\n";
            } else {
                cout << "Invalid task number.\n";
            }
        }
    } while (choice != 5);
    
    cout << "Exiting the app. Goodbye!" << endl;
}

